<%- include('../header') %>
<div class="container booksContainer">
    <div class="booksContainer__searchbox">
        <input type="text" name="search" id="" placeholder="Search book...">
    </div>
    <div class="booksContainer__listing">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(function(book){ %>
                    <tr>
                        <td><%- book.title %> </td>
                        <td><%- book.author %> </td>
                        <td><%- book.year %> </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<% console.log(books) %>

<% include('../footer') %>